unbind r
bind r source-file ~/.config/tmux/tmux.conf

unbind %
unbind B
unbind Enter

bind B split-window -h
bind V split-window -v

# Show indicators for active pane (tmux 3.3+)
# Options: off | colour | arrows | both
set -g pane-border-indicators colour

# Show pane status line (optional)
# Options: off | top | bottom
set -g pane-border-status top
set -g pane-border-format "#{pane_index}: #{pane_current_path}"

# -- tpm -----------------------------------------------------------------------
tmux_conf_update_plugins_on_launch=true

tmux_conf_update_plugins_on_reload=true

tmux_conf_uninstall_plugins_on_reload=true

set -g @plugin 'christoomey/vim-tmux-navigator'

# Enable focus events for better autoread support in Neovim
set-option -g focus-events on

set -g mouse on

# Faster command sequences - reduce escape-time for quicker prefix key response
set-option -g escape-time 10

# Reduce repeat time if you don't need long repeat windows
set-option -g repeat-time 300

# Fix Shift+Enter and other modifier keys for Claude Code
# set -g extended-keys always
# set -as terminal-features 'xterm*:extkeys'

# Initialize TPM (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'

run-shell /Users/bryanarendt/code2/tmux-ba/tmux-vscode.tmux
